{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/application/**/*",
        "src/domain/**/*",
        "src/infrastructure/**/*"
    ],
    "exclude": [
        "src/presentation/**/*",
        "node_modules",
        "**/*.test.ts"
    ]
}