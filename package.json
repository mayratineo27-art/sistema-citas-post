{
    "name": "sistema-citas-posta",
    "version": "1.0.0",
    "description": "Sistema de Gestión de Citas Médicas",
    "main": "dist/infrastructure/server.js",
    "scripts": {
        "dev": "npm run dev:client",
        "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "nodemon --exec \"ts-node --project tsconfig.server.json\" src/infrastructure/server.ts",
        "dev:client": "vite",
        "build": "npm run build:client && npm run build:server",
        "build:server": "tsc -p tsconfig.server.json",
        "build:client": "tsc -b && vite build",
        "start": "node dist/infrastructure/server.js",
        "test": "jest",
        "lint": "eslint . --ext .ts,.tsx",
        "preview": "vite preview"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.39.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jspdf": "^3.0.4",
        "lucide-react": "^0.294.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.10",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "eslint": "^8.53.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "postcss": "^8.4.31",
        "supabase": "^2.65.6",
        "tailwindcss": "^3.3.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vite": "^5.0.0"
    }
}
